ent_audio(file_path, save_dir, file_name):\n","    # Load audio file\n","    y, sr = librosa.load(file_path, sr=16000)\n","\n","    # Define augmentations\n","    augment = Compose([\n","        AddGaussianNoise(min_amplitude=0.02, max_amplitude=0.1, p=0.5),\n","        TimeStretch(min_rate=0.8, max_rate=1.2, p=0.5),\n","        PitchShift(min_semitones=-4, max_semitones=4, p=0.5),\n","        # Corrected: Use 'shift_min' and 'shift_max' instead of 'min_fraction' and 'max_fraction'\n","        Shift(shift_min=-0.5, shift_max=0.5, p=0.5)  # Shift by a fraction of the audio length\n","    ])\n","\n","    # Apply augmentations\n","    augmented_audio = augment(samples=y, sample_rate=sr)\n","\n","    # Save augmented audio\n","    augmented_file_path = os.path.join(save_dir, f\"aug_{file_name}\")\n","    sf.write(augmented_file_path, augmented_audio, sr)\n","    return augmented_file_path\n","\n","# Function to create augmented dataset\n","def create_augmented_dataset(folder_path, save_dir):\n","    augmented_data = []\n","\n","    # Ensure the save directory exists\n","    if not os.path.exists(save_dir):\n","        os.makedirs(save_dir)\n","\n","    for file_name in os.listdir(folder_path):\n","        if file_name.endswith('.wav'):\n","            class_label = parse_filename(file_name)\n","            file_path = os.path.join(folder_path, file_name)\n","\n","            # Perform augmentation for each file\n","            augmented_file = augment_audio(file_path, save_dir, file_name)\n","            augmented_data.append((augmented_file, class_label))\n","\n","    return augmented_data\n","\n","# Function to check label distribution after augmentation\n","def check_label_balance(augmented_data):\n","    labels = [label for _, label in augmented_data]\n","    label_counts = Counter(labels)\n","    total_files = len(augmented_data)\n","\n","    print(\"Label Distribution after Augmentation:\")\n","    for label, count in label_counts.items():\n","        print(f\"{label}: {count} ({(count/total_files)*100:.2f}%)\")\n","\n","    # Check if the distribution is balanced (You can define your threshold for balance)\n","    min_count = min(label_counts.values())\n","    max_count = max(label_counts.values())\n","\n","    if max_count - min_count > total_files * 0.2:  # Example threshold: 20% imbalance\n","        print(\"Warning: The dataset is imbalanced!\")\n","    else:\n","        print(\"The dataset seems balanced.\")\n","\n","# Directory containing the original audio files\n","folder_path = '/content/extracted_folder'  # Update this path to your data\n","save_dir = 'output'  # Where to save augmented audio\n","\n","# Create the augmented dataset\n","augmented_data = create_augmented_dataset(folder_path, save_dir)\n","\n","# Display the augmented data\n","for audio_file, label in augmented_data[:5]:  # Show the first 5 augmented samples\n","    print(f\"Augmented File: {audio_file}, Label: {label}\")\n","\n","# Check label balance after augmentation\n","check_label_balance(augmented_data)\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/","height":373},"id":"NlDDikCFTPJJ","executionInfo":{"status":"error","timestamp":1736263984838,"user_tz":-330,"elapsed":385,"user":{"displayName":"SHAHIDKHAN S 22ADR099","userId":"04241991466908434314"}},"outputId":"9ab90473-9507-48b2-cb3d-1807bdacbd41"},"execution_count":48,"outputs":[{"output_type":"error","ename":"TypeError","evalue":"Shift.__init__() got an unexpected keyword argument 'shift_min'","traceback":["\u001b[0;31m---------------------------------------------------------------------------\u001b[0m","\u001b[0;31mTypeError\u001b[0m                                 Traceback (most recent call last)","\u001b[0;32m<ipython-input-48-3ee55b732a7e>\u001b[0m in \u001b[0;36m<cell line: 88>\u001b[0;34m()\u001b[0m\n\u001b[1;32m     86\u001b[0m \u001b[0;34m\u001b[0m\u001b[0m\n\u001b[1;32m     87\u001b[0m \u001b[0;31m# Create the augmented dataset\u001b[0m\u001b[0;34m\u001b[0m\u001b[0;3